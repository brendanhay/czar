    main-is:           Health.hs
    hs-source-dirs:    czar-checks

    ghc-options:
        -threaded
        -Wall
        -fwarn-tabs
        -funbox-strict-fields
        -with-rtsopts=-T

    build-depends:
        base              >= 4 && < 5
      , base64-bytestring
      , bytestring
      , czar
      , errors
      , network
      , system-info
      , time
      , transformers

executable czar-graphite
    default-language:  Haskell2010
    main-is:           Main.hs
    hs-source-dirs:    czar-graphite

    ghc-options:
